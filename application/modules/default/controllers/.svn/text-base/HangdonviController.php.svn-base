 * @author thomnd
 *        
 */
class HangdonviController extends PublicdetailController {
	private $_MHangdonvi;
	private $_Tenhangdonvi;
	private $_Hangdonvi = array ();
	public function init() {
		$this->initValue ();
		$this->_MHangdonvi = new Model_Hangdonvi ();
		
		if (isset ( $_REQUEST ['Tenhangdonvi'] ) && $_REQUEST ['Tenhangdonvi'] != '') {
			$this->_Tenhangdonvi = $_REQUEST ['Tenhangdonvi'];
			$this->_Hangdonvi = array (
					'Tenhangdonvi' => $_REQUEST ['Tenhangdonvi'] 
			);
		}
	}
	
	
	public function indexAction() {
	}
	public function jsonAction() {
		$page = isset ( $_POST ['page'] ) ? intval ( $_POST ['page'] ) : 1;
		$rows = isset ( $_POST ['rows'] ) ? intval ( $_POST ['rows'] ) : 10;
		$sort = isset ( $_POST ['sort'] ) ? strval ( $_POST ['sort'] ) : 'Id';
		$order = isset ( $_POST ['order'] ) ? strval ( $_POST ['order'] ) : 'desc';
		$offset = ($page - 1) * $rows;
		
		$this->_helper->layout ()->disableLayout ();
		$jsonObj = json_encode ( $this->_MHangdonvi->getFetObj ( $sort, $order, $offset, $rows ) );
		return $this->view->jsonObj = $jsonObj;
	}
	public function comboAction() {
		$this->_helper->layout ()->disableLayout ();
		$jsonObj = json_encode ( $this->_MHangdonvi->getNameIdObj () );
		return $this->view->jsonObj = $jsonObj;
	}
	public function combonochuhoAction() {
		$this->_helper->layout ()->disableLayout ();
		$jsonObj = json_encode ( $this->_MHangdonvi->getNameIdObjNoChuho () );
		return $this->view->jsonObj = $jsonObj;
	}
	public function addAction() {
		$this->_helper->layout ()->disableLayout ();
		$jsonObj = array ();
		$dup = $this->_MHangdonvi->dupObj ( 0, $this->_Tenhangdonvi );
		if ($dup > 0) {
			echo "<script type=\"text/javascript\">
			    alert('Tên này đã có!');
			</script>";
			$jsonObj ["success"] = false;
			return $this->view->jsonObj = json_encode ( $jsonObj );
		} else {
			$this->_MHangdonvi->addObj ( $this->_Hangdonvi );
			$jsonObj ["success"] = true;
		}
		return $this->view->jsonObj = json_encode ( $jsonObj );
	}
	public function updateAction() {
		$id = $this->_getParam ( 'id' );
		$this->_helper->layout ()->disableLayout ();
		$dup = $this->_MHangdonvi->dupObj ( $id, $this->_Tenhangdonvi );
		if ($dup > 0) {
			echo "<script type=\"text/javascript\">
			    alert('Tên này đã có!');
			</script>";
			$jsonObj ["success"] = false;
			return $this->view->jsonObj = json_encode ( $jsonObj );
		} else {
			$this->_MHangdonvi->updateObj ( $id, $this->_Hangdonvi );
			$jsonObj ["success"] = true;
		}
		return $this->view->jsonObj = json_encode ( $jsonObj );
	}
	public function delAction() {
		$this->_helper->layout ()->disableLayout ();
		$id = $_REQUEST ['id'];
		$_Id = null;
		$jsonObj = null;
		if (isset ( $id ) && $id > 0) {
			$_Id = $this->_MHangdonvi->delObj ( $id );
		} else {
			return;
		}
		if (! $_Id) {
			$jsonObj = json_encode ( array (
					'success' => false 
			) );
		} else {
			$jsonObj = json_encode ( array (
					'success' => true 
			) );
		}
		return $this->view->jsonObj = $jsonObj;
	}
}