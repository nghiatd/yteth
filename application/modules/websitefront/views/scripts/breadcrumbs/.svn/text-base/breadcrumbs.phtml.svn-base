<?php if($this->breadcrumbs):?>

<div class="breadcrumbs column">
	<p>
	<?php $count = count($this->breadcrumbs)-1;?>
	
	<?php $i = 0;?>
                <?php foreach ($this->breadcrumbs as $key => $value):?>
                	<a <?php if (isset($value)):?>
			href="<?php echo $this->baseUrl().'/websitefront/'.$value?>"
			<?php endif;?>><?php echo $key?></a>  <?php echo ($i<$count)? "&gt;": ""?>
                	<?php $i++;?>
                <?php endforeach;?>	
                </p>
</div>
<?php endif;?>