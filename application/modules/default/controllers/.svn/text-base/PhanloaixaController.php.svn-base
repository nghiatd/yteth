class PhanloaixaController extends PublicdetailController {
	private $_Mxa;
	private $_Tenphanloai;
	private $_Phanloai = array ();
	public function init() {
		$this->initValue ();
		$this->_Mxa = new Model_Phanloaixa();
		
		if (isset ( $_REQUEST ['Tenphanloai'] ) && $_REQUEST ['Tenphanloai'] != '') {
			$this->_Tenphanloai = $_REQUEST ['Tenphanloai'];
			$this->_Phanloai = array (
					'Tenphanloai' => $_REQUEST ['Tenphanloai'] 
			);
		}
	}
	
	public function indexAction() {
	}
	/**
	 * - View dữ liệu.
	 *
	 * @return string json
	 */
	public function jsonAction() {
		$page = isset ( $_POST ['page'] ) ? intval ( $_POST ['page'] ) : 1;
		$rows = isset ( $_POST ['rows'] ) ? intval ( $_POST ['rows'] ) : 10;
		$sort = isset ( $_POST ['sort'] ) ? strval ( $_POST ['sort'] ) : 'Id';
		$order = isset ( $_POST ['order'] ) ? strval ( $_POST ['order'] ) : 'desc';
		$offset = ($page - 1) * $rows;
		
		$this->_helper->layout ()->disableLayout ();
		$jsonObj = json_encode ( $this->_Mxa->getFetObj ( $sort, $order, $offset, $rows ) );
		return $this->view->jsonObj = $jsonObj;
	}
	/**
	 * - Tra về Id và Tên của đối tượng (Combobox).
	 *
	 * @return string json
	 */
	public function comboAction() {
		$this->_helper->layout ()->disableLayout ();
		$jsonObj = json_encode ( $this->_Mxa->getIdName () );
		return $this->view->jsonObj = $jsonObj;
	}
	/**
	 * - Thêm dữ liệu.
	 *
	 * @return String json
	 */
	public function addAction() {
		$this->_helper->layout ()->disableLayout ();
		$jsonObj = array ();
		
		$dup = $this->_Mxa->dupliObj ( 0, $this->_Tenphanloai );
		if ($dup > 0) {
			echo "<script type=\"text/javascript\">
			    alert('Tên xã này đã có trong danh sách!');
			</script>";
			$jsonObj ["success"] = false;
			return $this->view->jsonObj = json_encode ( $jsonObj );
		} else {
			$this->_Mxa->addObj ( $this->_Phanloai );
			$jsonObj ["success"] = true;
		}
		return $this->view->jsonObj = json_encode ( $jsonObj );
	}
	/**
	 * - Sửa dữ liệu.
	 *
	 * @return string json
	 */
	public function updateAction() {
		$id = $this->_getParam ( 'id' );
		$this->_helper->layout ()->disableLayout ();
		$dup = $this->_Mxa->dupliObj ( $id, $this->_Tenphanloai );
		if ($dup > 0) {
			echo "<script type=\"text/javascript\">
			    alert('Tên phân loại này đã có trong danh sách!');
			</script>";
			$jsonObj ["success"] = false;
			return $this->view->jsonObj = json_encode ( $jsonObj );
		} else {
			$this->_Mxa->updateObj ( $id, $this->_Phanloai );
			$jsonObj ["success"] = true;
		}
		return $this->view->jsonObj = json_encode ( $jsonObj );
	}
	/**
	 * - Xóa dữ liệu.
	 *
	 * @return void string
	 */
	public function delAction() {
		$this->_helper->layout ()->disableLayout ();
		$id = $_REQUEST ['id'];
		// $id = $this->_getParam ( 'id' );
		$_Id = null;
		$jsonObjv = null;
		
		if (isset ( $id ) && $id > 0) {
			$_Id = $this->_Mxa->delObj ( $id );
		} else {
			return;
		}
		
		if (! $_Id) {
			$jsonObj = json_encode ( array (
					'success' => false 
			) );
		} else {
			$jsonObj = json_encode ( array (
					'success' => true 
			) );
		}
		return $this->view->jsonObj = $jsonObj;
	}
}